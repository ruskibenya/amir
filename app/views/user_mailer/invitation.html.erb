<html>


<head>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,800|Roboto" rel="stylesheet">
</head>


<body>

  <style>
    .footer-mail{
      padding: 3%;
      background-color: lightgray;
      display: flex;
      justify-content: space-around;
      text-align: center;
    }

    .name{
      flex: 0 0 33%;
      height: 50%;
    }

    .name h5{
      font-weight: 800;
      font-family: 'Poppins';
    }

    .media{
      flex: 0 0 33%;
      height: 50%;
    }



    .what{
      flex: 0 0 33%;
      height: 50%;
    }


  </style>

  <div style="padding-left: 4%; ">
    <!-- <img src="./app/assets/images/backpack.png" alt="Backpack.png"> -->
    <%= image_tag attachments['backpack'].url, style: 'height: 80px; display: inline-block'%> <p style="font-family: 'Poppins'; font-weight: 800; display: inline-block">Amir</p>
  </div>

  <div style="display: flex; justify-content: center; background-image: url('<%= attachments["cinqueterre"].url %>'), linear-gradient(rgba(250, 250, 250, 0.4), rgba(250, 250, 250, 0.6)); background-size: cover; padding: 10% 0">
      <div style="text-align: center; font-family: 'Roboto' ">
    <div class="col-xs-12 col-md-12" style="margin: 3% 0; color: white">
      <h3>Hello <%= @recipient.capitalize %>,</h3>
      <p style="font-size: 25px">You were invited to a tour !</p>
    </div>

    <div class="col-xs-12 col-md-12" style="margin: 3% 0">
      <p style="border-bottom: 10px solid currentColor; margin: 0 auto; font-weight: 800; opacity: 0.8; color: white"><%= @tour_name %></p>
    </div>
    <div style="text-align: center; margin: 15% 0">
      <%=  link_to @link do %>
          <a href="", style="
          font-family: 'Poppins';
          text-align: center;
          font-size: 20px;
          background-color: #ff929a;
          padding: 10px 15px;
          font-weight: 400;
          text-decoration: none;
          color: white;
          border-radius: 4px;">Join the tour</a>
      <% end %>
    </div>
    </div>
  </div>



  <div class="footer-mail">
    <div class="name">
      <h5>amir</h5>
    </div>
    <div class="what">

    </div>
    <div class="media">

    </div>
  </div>
</body>

</html>
