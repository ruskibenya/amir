<% content_for :above_container do %>
  <div class="profil-section">
    <div class="info">
      <div class="user-pp">
        <%= image_tag ("cyrille"), class: 'avatar-large' %>
      </div>
      <div class="user-name">
        <h4><%= current_user.name %></h4>
      </div>
    </div>
    <div class="button-create">
      <%= link_to 'create a new tour', new_tour_path, class: 'amir-btn' %>
    </div>
  </div>
<% end %>

<div class="tours-section">
  <h4 class="title-page">tours</h4>
  <% current_user.tours.each do |tour| %>
    <div class="col-xs-12 col-sm-12 col-md-6">
      <%= link_to tour_path(tour) do %>
      <div class="tour-card">
        <div class="group-category">
          <i class="fas fa-map"></i>
        </div>
        <div class="group-name">
          <p><%= tour.name %></p>
        </div>
        <div class="group-dates">
          <p>200000</p>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
